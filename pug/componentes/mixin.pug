mixin caja-dos(img,title,academia,instructor,text,ruta,nombreArchivo)
  .conocimiento__item
    .conocimiento__img 
      img(src="" + img, alt="Captura del proyecto realizado", srcset="")
    .conocimiento__descripcion
      h3=title
      .conocimiento__bootcamp 
        span academia
        p=academia
        span instructor
        p=instructor
      .conocimiento__calificacion
        span(class='bx bxs-star')
        span(class='bx bxs-star')
        span(class='bx bxs-star')
        span(class='bx bxs-star-half')
        span(class='bx bx-star')
        //bx bxs-star-half estrella mitad
        //bx bx-star estrella vacia
        //bx bxs-star estrella vacia
      p=text
      .conocimiento__btn-primario.btn-primario
        a(href='' + ruta, download='' + nombreArchivo)
          span certificado
          i(class='bx bxs-download')


