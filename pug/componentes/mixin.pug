  .proyectos__card 
    .proyectos__img 
      img(src='' + imagenUno)
    .proyectos__descripcion 
      h3=title
      p=text
      span tecnologias aplicadas:
      ul
        +icono-imagenes(imagenesIcon[1])
        +icono-imagenes(imagenesIcon[5])
        +icono-imagenes(imagenesIcon[3])
        +icono-imagenes(imagenesIcon[4])
        +icono-imagenes(imagenesIcon[2])
      .proyectos__btn-primario
        a(href='' + link, target='' + tg, class='' + btnModo)=btn



